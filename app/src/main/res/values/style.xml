<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_circle</item>
    </style>

    <style name="TimerButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:height">50dp</item>
        <item name="android:width">50dp</item>
        <item name="backgroundTint">@color/button_color</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="InterfaceButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/basic_opposite_color</item>
        <item name="android:height">40dp</item>
        <item name="android:width">40dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomFullDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TextButton" parent="Widget.AppCompat.TextView">
        <item name="color">@color/basic_opposite_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BasicText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>