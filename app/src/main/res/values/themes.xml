<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeIsGold" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/deep_green</item>
        <item name="colorOnPrimary">@color/pastel_violet</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pastel_blue</item>
        <item name="colorSecondaryVariant">@color/deep_green_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/basic_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/modal_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/modal_slide_out_bottom</item>
    </style>
</resources>